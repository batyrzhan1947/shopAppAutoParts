<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="5dp"
    android:background="@color/white"
    app:cardCornerRadius="12dp">


    <RelativeLayout
        android:id="@+id/contentProductLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/productImgView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/placeholder_img"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/productNameTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productImgView"
            android:layout_marginHorizontal="18dp"
            android:layout_marginVertical="6dp"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/productArticulTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productNameTxtView"
            android:layout_marginHorizontal="18dp"
            android:text="@string/app_name"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/productTypeTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productArticulTxtView"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="6dp"
            android:text="@string/app_name"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/productPriceTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productTypeTxtView"
            android:layout_marginVertical="6dp"
            android:layout_marginStart="18dp"
            android:text="2000 тг"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/BottomViewPr"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/favoriteBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ic_favorite_border"
            tools:ignore="ContentDescription" />
    </FrameLayout>


</androidx.cardview.widget.CardView>