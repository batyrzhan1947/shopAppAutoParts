<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <ImageView
        android:id="@+id/imgProductCart"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:background="@drawable/placeholder_img"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/nameProductCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/imgProductCart"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/quantityPriceProductCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameProductCart"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/imgProductCart"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/totalPriceCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quantityPriceProductCart"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        android:layout_toEndOf="@id/imgProductCart"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="@string/app_name"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/deleteCartBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@id/viewBottomCart"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/ic_baseline_delete"
        tools:ignore="ContentDescription" />


    <View
        android:id="@+id/viewBottomCart"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/totalPriceCart"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/gray" />


</RelativeLayout>